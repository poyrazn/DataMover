# default: off
# description: An xinetd service to list the content of a directory to clients upon request using tcp protocol
#

service list
{
    protocol       = tcp
    disable        = no
    port           = 1111
    flags          = REUSE
    socket_type    = stream
    user           = root
    wait           = no
    server         = /home/server/server_xinetd_list.py
    log_on_failure += USERID
}